<%= form_for(@subcategory) do |f| %>
<% if @subcategory.errors.any? %>
  <div class="da-panel-content">
    <div class="da-message warning">
      <h2><%= pluralize(@subcategory.errors.count, "error") %> prohibited this sub category from being saved:</h2>

      <ul>
        <% @subcategory.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>

<div class="da-form-row">
  <label></label>
  <div class="da-form-item large">
    <%= f.select(:category_id, Category.all.map {|c| [c.title, c.id]}, :prompt =>"Choose a Category") %>
  </div>
</div>

<div class="da-form-row">
  <label><%= f.label :title %></label>
  <div class="da-form-item large">
    <%= f.text_field :title, class: "form-control", placeholder:"Name of SubCategory"%>
    </div>
  </div>

<div class="da-button-row">
    <%= f.submit class: "da-button blue left" %>
</div>

<% end %>